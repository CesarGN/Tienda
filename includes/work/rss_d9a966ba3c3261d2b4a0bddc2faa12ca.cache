<br />
This Code should work (it did for me anyway..).<br />
<br />
I'm going to be lazy today and give you the instructions here, I hope you won't get mad at me.<br />
<br />
Instructions have been modified in the package as well. FULL PACKAGE<br />
<br />
<br />
In ./includes/functions/html_output.php, replace the tep_image and the tep_image_legacy functions with the code below.<br />
<br />
This is ONLY if you have the Kiss Thumbnailer Add-On installed.<br />
<br />
<br />
/* Copy me, please */<br />
	// The HTML image wrapper function<br />
	   // New HTML image wrapper function modified for KISS Image Thumbnailer by FWR Media<br />
	  function tep_image($src, $alt = '', $width = '', $height = '', $parameters = '', $products_id = null, $stock_check = '') {<br />
	   // If width and height are not numeric then we can't do anything with it<br />
	   if ( !is_numeric ( $width ) || !is_numeric ( $height ) ) return tep_image_legacy( $src, $alt, $width, $height, $parameters, $products_id, $stock_check );<br />
	   require_once DIR_WS_MODULES . 'kiss_image_thumbnailer/classes/Image_Helper.php';<br />
	   $attributes = array( 'alt' =&gt; $alt, 'width' =&gt; $width, 'height' =&gt; $height );<br />
	   $image = new Image_Helper( array( 'src'	=&gt; $src,<br />
	   'attributes'	 =&gt; $attributes,<br />
	   'parameters'	 =&gt; $parameters,<br />
	   'default_missing_image' =&gt; DIR_WS_IMAGES . 'no_image_available_150_150.gif',<br />
	   'isXhtml'	=&gt; true,<br />
	   'thumbs_dir_path'	=&gt; DIR_WS_MODULES . 'kiss_image_thumbnailer/thumbs/',<br />
	   'thumb_quality' =&gt; 75,<br />
	   'thumb_background_rgb' =&gt; array( 'red'   =&gt; 255,<br />
	   'green' =&gt; 255,<br />
	   'blue'  =&gt; 255 ) ) );<br />
	   if ( false === $image_assembled = $image-&gt;assemble() ) {<br />
				return tep_image_legacy( $src, $alt, $width, $height, $parameters, $products_id, $stock_check );<br />
	   }<br />
			<br />
			$image = '';<br />
		  // Check stock and add Out Of Stock<br />
			if (!is_numeric($stock_check))<br />
			 	$stock_check = tep_get_products_stock($products_id);<br />
			if ($stock_check &lt;= 0) {<br />
			$image .= '&lt;div class=&quot;image-stock&quot;&gt;';<br />
			$image .= $image_assembled;<br />
			$image .= '&lt;h2&gt;&lt;span&gt;'.ENTRY_OUT_OF_STOCK.'&lt;/span&gt;&lt;/h2&gt;&lt;/div&gt;';<br />
			return $image;<br />
		   }<br />
<br />
	   return $image_assembled;<br />
	  } // end function<br />
	////<br />
	// The HTML image wrapper function<br />
	function tep_image_legacy($src, $alt = '', $width = '', $height = '', $parameters = '', $products_id = null, $stock_check = '') {<br />
		if ( (empty($src) || ($src == DIR_WS_IMAGES)) &amp;&amp; (IMAGE_REQUIRED == 'false') ) {<br />
			return false;<br />
		}<br />
		$image = '';<br />
		$this_product_out_of_stock = 0;<br />
		// Check stock and add Out Of Stock<br />
		if (tep_not_null($products_id)) {<br />
			if (!is_numeric($stock_check))<br />
				$stock_check = tep_get_products_stock($products_id);<br />
			if ($stock_check &lt;= 0) {<br />
				$this_product_out_of_stock = 1;<br />
				$image .= '&lt;div class=&quot;image-stock&quot;&gt;';<br />
			}<br />
		}<br />
		// alt is added to the img tag even if it is null to prevent browsers from outputting<br />
		// the image filename as default<br />
		$image .= '&lt;img src=&quot;' . tep_output_string($src) . '&quot; alt=&quot;' . tep_output_string($alt) . '&quot;';<br />
		if (tep_not_null($alt)) {<br />
			$image .= ' title=&quot; ' . tep_output_string($alt) . ' &quot;';<br />
		}<br />
		if ( (CONFIG_CALCULATE_IMAGE_SIZE == 'true') &amp;&amp; (empty($width) || empty($height)) ) {<br />
			if ($image_size = @getimagesize($src)) {<br />
				if (empty($width) &amp;&amp; tep_not_null($height)) {<br />
					$ratio = $height / $image_size[1];<br />
					$width = intval($image_size[0] * $ratio);<br />
				} elseif (tep_not_null($width) &amp;&amp; empty($height)) {<br />
					$ratio = $width / $image_size[0];<br />
					$height = intval($image_size[1] * $ratio);<br />
				} elseif (empty($width) &amp;&amp; empty($height)) {<br />
					$width = $image_size[0];<br />
					$height = $image_size[1];<br />
				}<br />
			} elseif (IMAGE_REQUIRED == 'false') {<br />
				return false;<br />
			}<br />
		}<br />
		if (tep_not_null($width) &amp;&amp; tep_not_null($height)) {<br />
			$image .= ' width=&quot;' . tep_output_string($width) . '&quot; height=&quot;' . tep_output_string($height) . '&quot;';<br />
		}<br />
		if (tep_not_null($parameters)) $image .= ' ' . $parameters;<br />
		$image .= ' /&gt;';<br />
		// Check stock and add Out Of Stock<br />
		if ($this_product_out_of_stock == 1) {<br />
			$image .= '&lt;h2&gt;&lt;span&gt;'.ENTRY_OUT_OF_STOCK.'&lt;/span&gt;&lt;/h2&gt;&lt;/div&gt;';<br />
		}<br />
		return $image;<br />
	}<br />";s:7:"pubDate";s:31:"Tue, 17 Sep 2013 02:00:47 +0200";}i:2;a:4:{s:5:"title";s:58:"Marketing Platform - Facebook Store & Data Feed Management";s:4:"link";s:38:"http://addons.oscommerce.com/info/8720";s:11:"description";s:115:"------------------ Latest Changes ----------------<br />
